#!/usr/bin/env bash

success () {
    printf "\r\033[2K  [ \033[00;32mOK\033[0m ] %s\n" "$1"
}

link_files() {
    if [ -L "$2" ] ; then
        rm -f "$2"
    fi

    ln -s "$(pwd)/$1" "$2"
    success "linked $1 to $2"
}

git submodule update --init

mkdir -p ~/.zsh

# pure
link_files submodules/pure ~/.zsh/pure

# vim
link_files vim ~/.vim

# zsh-syntax-highlighting
link_files submodules/zsh-syntax-highlighting ~/zsh-syntax-highlighting

# zsh-autosuggestion
link_files submodules/zsh-autosuggestions ~/.zsh/zsh-autosuggestions

# zsh
link_files zshrc ~/.zshrc

# vim
link_files vimrc ~/.vimrc

# git
link_files gitconfig ~/.gitconfig
link_files git-completion.zsh ~/.git-completion.zsh

# git config
link_files sshconfig ~/.ssh/config

# vhosts
# link_files vhosts /usr/local/etc/httpd/extra/httpd-vhosts.conf

echo ''
success 'All installed!'
