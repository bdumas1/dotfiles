#!/usr/bin/env bash

success () {
    printf "\r\033[2K  [ \033[00;32mOK\033[0m ] %s\n" "$1"
}

link_files() {
    if [ -L "$2" ] ; then
        rm -f "$2"
    fi

    sudo ln -s "$(pwd)/$1" "$2"
    success "linked $1 to $2"
}

git submodule update --init

CONFIG_DIR=~/.config
mkdir -p "${CONFIG_DIR}"

# Oh My Zsh
[ ! -d "$HOME/.oh-my-zsh" ] && sh -c "$(curl -fsSL https://raw.github.com/ohmyzsh/ohmyzsh/master/tools/install.sh)"

# zsh
mkdir -p ~/.zsh
link_files zsh/aliases ~/.aliases
rm -rf ~/.zshrc && link_files zsh/zshrc ~/.zshrc
link_files zsh/zsh-syntax-highlighting ~/zsh-syntax-highlighting
link_files zsh/zsh-autosuggestions ~/.zsh/zsh-autosuggestions
link_files zsh/pure ~/.zsh/pure

# vim
mkdir -p "${CONFIG_DIR}/nvim"
link_files vim/vimrc ~/.vimrc
link_files vim/vimrc ~/.config/nvim/init.vim
link_files vim/ideavimrc ~/.ideavimrc
link_files vim/vscodevimrc ~/.vscodevimrc

# git
link_files git/gitconfig ~/.gitconfig
link_files git/gitignore_global ~/.gitignore_global

# tmux
link_files tmux/tmux.conf ~/.tmux.conf

# Hyprland
link_files hypr/custom ~/.config/hypr/custom

# udevmon
# On ArchLinux, run pacman -S interception-caps2esc
link_files udevmon/caps2esc.yaml /etc/interception/udevmon.d/caps2esc.yaml
sudo systemctl enable --now udevmon.service

echo ''
success 'All installed!'
