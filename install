#!/usr/bin/env bash

solarized_folder=~/.vim/pack/themes/opt/solarized8
vim_airline_folder=~/.vim/pack/dist/start/vim-airline

success () {
    printf "\r\033[2K  [ \033[00;32mOK\033[0m ] %s\n" "$1"
}

# vim airline
if [ ! -d $vim_airline_folder ]
    git clone https://github.com/vim-airline/vim-airline ~/.vim/pack/dist/start/vim-airline
fi

# solarized8
if [ ! -d $solarized_folder ]
    git clone https://github.com/lifepillar/vim-solarized8.git $solarized_folder
fi

# zsh-syntax-highlighting
git clone https://github.com/zsh-users/zsh-syntax-highlighting.git

# zsh
cp .zshrc ~/.zshrc

# vim
cp .vimrc ~/.vimrc

# git
cp .gitconfig ~/.gitconfig
cp .git-completion.bash ~/.git-completion.bash

echo ''
success 'All installed!'